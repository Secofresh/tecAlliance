POST http://localhost:8080/api/v1/articles
Content-Type: application/json

{
  "name": "Dell XPS 15",
  "slogan": "Professional laptop for developers",
  "netPrice": 800.00,
  "salesPrice": 1499.99,
  "vatRatio": 0.19,
  "discounts": [
    {
      "description": "Student Discount",
      "discountPercentage": 10,
      "startDate": "2026-09-01",
      "endDate": "2026-09-30"
    }
  ]
}

